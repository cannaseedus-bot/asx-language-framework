{
  "name": "vscode-asx",
  "displayName": "ASX Envelope Diagnostics",
  "version": "0.1.0",
  "publisher": "asx",
  "engines": { "vscode": "^1.85.0" },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "workspaceContains:**/*.asx"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "ASX",
      "properties": {
        "asx.enable": { "type": "boolean", "default": true },
        "asx.maxDepth": { "type": "number", "default": 32 }
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "@types/node": "^20.0.0",
    "vscode": "^1.1.37"
  }
}
