{
  "$schema": "xjson://schema/core/v1",
  "id": "kuhul://schema/class/schema/v1",
  "title": "Schema Class Schema (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "id", "version", "meta", "includes", "invariants"],
  "properties": {
    "kind": { "type": "string", "const": "schema.class" },
    "id": { "type": "string", "pattern": "^asx://class/schema/[a-z0-9._-]+$" },
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "domain", "authority"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 128 },
        "domain": { "type": "string", "enum": ["schema", "matrix"] },
        "authority": { "type": "string", "const": "bounded" },
        "description": { "type": "string", "maxLength": 2048 }
      }
    },
    "includes": {
      "type": "array",
      "minItems": 0,
      "maxItems": 256,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^\\{\\{\\s*[A-Za-z0-9_./-]+\\s*\\}\\}$"
      }
    },
    "invariants": {
      "type": "array",
      "minItems": 1,
      "maxItems": 512,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["rule", "level"],
        "properties": {
          "rule": { "type": "string", "minLength": 1, "maxLength": 512 },
          "level": { "type": "string", "enum": ["must", "should", "may"] },
          "path": { "type": "string", "maxLength": 512 }
        }
      }
    }
  }
}
