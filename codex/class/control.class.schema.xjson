{
  "$schema": "xjson://schema/core/v1",
  "id": "kuhul://schema/class/control/v1",
  "title": "Control Class Schema (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "id", "version", "meta", "vectors", "invariants"],
  "properties": {
    "kind": { "type": "string", "const": "control.class" },
    "id": { "type": "string", "pattern": "^asx://class/control/[a-z0-9._-]+$" },
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "domain", "authority"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 128 },
        "domain": { "type": "string", "enum": ["xcfe", "control"] },
        "authority": { "type": "string", "const": "bounded" },
        "description": { "type": "string", "maxLength": 2048 }
      }
    },
    "vectors": {
      "type": "object",
      "additionalProperties": false,
      "required": ["control", "variable", "flow"],
      "properties": {
        "control": {
          "type": "array",
          "maxItems": 1024,
          "uniqueItems": true,
          "items": { "type": "string", "pattern": "^@[a-zA-Z][a-zA-Z0-9._-]{0,63}$" }
        },
        "variable": {
          "type": "array",
          "maxItems": 2048,
          "uniqueItems": true,
          "items": { "type": "string", "pattern": "^@[a-zA-Z][a-zA-Z0-9._-]{0,63}$" }
        },
        "flow": {
          "type": "array",
          "maxItems": 2048,
          "uniqueItems": true,
          "items": { "type": "string", "pattern": "^@[a-zA-Z][a-zA-Z0-9._-]{0,63}$" }
        }
      }
    },
    "invariants": {
      "type": "array",
      "minItems": 1,
      "maxItems": 512,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["rule", "level"],
        "properties": {
          "rule": { "type": "string", "minLength": 1, "maxLength": 512 },
          "level": { "type": "string", "enum": ["must", "should", "may"] },
          "path": { "type": "string", "maxLength": 512 }
        }
      }
    }
  }
}
