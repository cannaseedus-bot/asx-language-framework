{
  "$schema": "xjson://schema/core/v1",
  "id": "kuhul://schema/class/atomic/v1",
  "title": "Atomic Class Schema (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "id", "version", "meta", "atoms", "bindings", "invariants"],
  "properties": {
    "kind": { "type": "string", "const": "atomic.class" },
    "id": {
      "type": "string",
      "pattern": "^asx://class/atomic/[a-z0-9._-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "domain", "authority"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 128 },
        "domain": { "type": "string", "enum": ["ui", "atomic", "projection"] },
        "authority": { "type": "string", "const": "bounded" },
        "description": { "type": "string", "maxLength": 2048 },
        "tags": {
          "type": "array",
          "items": { "type": "string", "minLength": 1, "maxLength": 64 },
          "maxItems": 64,
          "uniqueItems": true
        }
      }
    },
    "atoms": {
      "type": "array",
      "minItems": 1,
      "maxItems": 4096,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "selector", "props"],
        "properties": {
          "name": { "type": "string", "pattern": "^[A-Za-z][A-Za-z0-9_-]{0,63}$" },
          "selector": { "type": "string", "minLength": 1, "maxLength": 256 },
          "props": {
            "type": "object",
            "maxProperties": 256,
            "additionalProperties": {
              "type": ["string", "number", "boolean", "null"]
            }
          },
          "states": {
            "type": "object",
            "maxProperties": 128,
            "additionalProperties": {
              "type": "object",
              "maxProperties": 128,
              "additionalProperties": { "type": ["string", "number", "boolean", "null"] }
            }
          }
        }
      }
    },
    "bindings": {
      "type": "object",
      "additionalProperties": false,
      "required": ["vars", "classes"],
      "properties": {
        "vars": {
          "type": "object",
          "maxProperties": 2048,
          "additionalProperties": {
            "type": ["string", "number", "boolean", "null"]
          }
        },
        "classes": {
          "type": "array",
          "maxItems": 2048,
          "uniqueItems": true,
          "items": { "type": "string", "pattern": "^\\.[A-Za-z0-9_-]{1,64}$" }
        }
      }
    },
    "invariants": {
      "type": "array",
      "minItems": 1,
      "maxItems": 512,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["rule", "level"],
        "properties": {
          "rule": { "type": "string", "minLength": 1, "maxLength": 512 },
          "level": { "type": "string", "enum": ["must", "should", "may"] },
          "path": { "type": "string", "maxLength": 512 }
        }
      }
    },
    "projection": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "html": { "type": "boolean", "default": true },
        "css": { "type": "boolean", "default": true },
        "svg": { "type": "boolean", "default": true }
      }
    }
  }
}
