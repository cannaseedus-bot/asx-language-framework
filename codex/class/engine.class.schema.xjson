{
  "$schema": "xjson://schema/core/v1",
  "id": "kuhul://schema/class/engine/v1",
  "title": "Engine Class Schema (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "id", "version", "meta", "exports", "invariants"],
  "properties": {
    "kind": { "type": "string", "const": "engine.class" },
    "id": { "type": "string", "pattern": "^asx://class/engine/[a-z0-9._-]+$" },
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "domain", "authority"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 128 },
        "domain": { "type": "string", "enum": ["engine", "runtime"] },
        "authority": { "type": "string", "const": "bounded" },
        "description": { "type": "string", "maxLength": 2048 }
      }
    },
    "exports": {
      "type": "object",
      "additionalProperties": false,
      "required": ["interfaces"],
      "properties": {
        "interfaces": {
          "type": "array",
          "minItems": 1,
          "maxItems": 128,
          "uniqueItems": true,
          "items": { "type": "string", "pattern": "^[A-Za-z][A-Za-z0-9_.:-]{0,127}$" }
        }
      }
    },
    "invariants": {
      "type": "array",
      "minItems": 1,
      "maxItems": 512,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["rule", "level"],
        "properties": {
          "rule": { "type": "string", "minLength": 1, "maxLength": 512 },
          "level": { "type": "string", "enum": ["must", "should", "may"] },
          "path": { "type": "string", "maxLength": 512 }
        }
      }
    }
  }
}
