{
  "$schema": "xjson://schema/core/v1",
  "id": "kuhul://schema/class/projection/v1",
  "title": "Projection Class Schema (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "id", "version", "meta", "renderer", "invariants"],
  "properties": {
    "kind": { "type": "string", "const": "projection.class" },
    "id": { "type": "string", "pattern": "^asx://class/projection/[a-z0-9._-]+$" },
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "domain", "authority"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 128 },
        "domain": { "type": "string", "enum": ["projection", "viewer", "render"] },
        "authority": { "type": "string", "const": "bounded" },
        "description": { "type": "string", "maxLength": 2048 }
      }
    },
    "renderer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["targets", "mode"],
      "properties": {
        "targets": {
          "type": "array",
          "minItems": 1,
          "maxItems": 16,
          "uniqueItems": true,
          "items": { "type": "string", "enum": ["html", "css", "svg", "text"] }
        },
        "mode": { "type": "string", "enum": ["pure_projection", "read_only"] },
        "templates": {
          "type": "array",
          "maxItems": 256,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "kind", "body"],
            "properties": {
              "id": { "type": "string", "pattern": "^[A-Za-z][A-Za-z0-9_.:-]{0,127}$" },
              "kind": { "type": "string", "enum": ["html", "css", "svg", "text"] },
              "body": { "type": "string", "maxLength": 200000 }
            }
          }
        }
      }
    },
    "invariants": {
      "type": "array",
      "minItems": 1,
      "maxItems": 512,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["rule", "level"],
        "properties": {
          "rule": { "type": "string", "minLength": 1, "maxLength": 512 },
          "level": { "type": "string", "enum": ["must", "should", "may"] },
          "path": { "type": "string", "maxLength": 512 }
        }
      }
    }
  }
}
